{
  "name": "teslapp",
  "version": "0.0.0",
  "description": "End-to-end, self-hosted application for tracking and visualizing Tesla energy data",
  "repository": "https://github.com/jchull/tesla-dashboard.git",
  "author": "Jeremy Hull <jchull@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "start": "lerna run start --stream --scope=@teslapp/{server,web}",
    "test": "lerna run test --scope=@teslapp/{server,web}",
    "clean": "lerna run clean",
    "format": "lerna run format",
    "purge": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^3.20.2"
  }
}
